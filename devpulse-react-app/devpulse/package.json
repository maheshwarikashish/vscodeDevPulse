{
  "name": "devpulse",
  "displayName": "devpulse",
  "description": "Tracks coding rhythm for DevPulse",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:devpulse.signInWithGitHub"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devpulse.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "devpulse.startSession",
        "title": "DevPulse: Start Coding Session"
      },
      {
        "command": "devpulse.endSession",
        "title": "DevPulse: End Coding Session"
      },
      {
        "command": "devpulse.logBreak",
        "title": "DevPulse: Log Break"
      },
      {
        "command": "devpulse.testFirestore",
        "title": "DevPulse: Test Firestore (diagnostic)"
      },
      {
        "command": "devpulse.signIn",
        "title": "DevPulse: Sign In"
      },
      {
        "command": "devpulse.signOut",
        "title": "DevPulse: Sign Out"
      },
      {
        "command": "devpulse.signInWithGitHub",
        "title": "DevPulse: Sign In with GitHub"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "firebase-tools": "^14.26.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "firebase": "^12.6.0",
    "react-chartjs-2": "^5.3.1"
  }
}
